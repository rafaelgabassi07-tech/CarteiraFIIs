
{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/.*).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/update-all-stocks",
      "schedule": "0 8 * * 1-5"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
